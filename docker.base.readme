### build docker-base container
docker build --no-cache -t docker-base .

### check before launch
DOCKER_BASE_CONTAINER_NAME="malik" \
DOCKER_BASE_SSH_PORT="2242" DOCKER_BASE_APP_PORT="8087" \
docker-compose config

### first start
DOCKER_BASE_CONTAINER_NAME="malik" DOCKER_BASE_SSH_PORT="2243" DOCKER_BASE_APP_PORT="8087" docker-compose up -d

### check status
journalctl -ef CONTAINER_NAME=malik

